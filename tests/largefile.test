# Note this test is not included in make check because it creates very
# large data files and takes a long time.

srcdir='.'

. $srcdir/testcommon.sh

#datadir=~/tmp/librsynctest_largefile
datadir=$tmpdir
old="$datadir/old"
new="$datadir/new"
sig="$datadir/sig"
delta="$datadir/delta"
out="$datadir/out"

size=1024K
if [ ! -f "$old" ]; then
   dd bs=$size count=1024 if=/dev/urandom >"$old"
   dd bs=$size count=256 if=/dev/urandom >"$new"
   dd bs=$size count=256 skip=128 if="$old" >>"$new"
   dd bs=$size count=256 if=/dev/urandom >>"$new"
   dd bs=$size count=256 skip=640 if="$old" >>"$new"
fi

run_test $bindir/rdiff -f $debug -b 1024 -S 8 -s signature $old $sig
run_test $bindir/rdiff -f $debug -s -I 32768 -O 32768 delta $sig $new $delta
run_test $bindir/rdiff -f $debug -s patch $old $delta $out
check_compare $new $out "large files"
true
